evol1=inicio



#tempo=int(input("Coloque o numero de evoluções temporais que deseja"))
tempo=100

NumbersLife=[]
for t in range(tempo):
    
    celula=[]
    for j in range(len(inicio)):
        celula.append(0)
    
    countCel=0
    for i in range(len(inicio)):
        if(i==0):
            ant1=evol1[len(inicio)-1]
            me1=evol1[i]
            prox1=evol1[i+1]
        elif(i==(len(inicio)-1)):
            ant1=evol1[i-1]
            me1=evol1[i]
            prox1=evol1[0]
        else:
            ant1=evol1[i-1]
            me1=evol1[i]
            prox1=evol1[i+1]
            
        celula[i]=conta(ant1, me1,prox1)
        if(celula[i]==0):
            fill(50)
            rect(6*i,6*t+6,6,6)
            
        if (celula[i]==1):
          countCel+=1      

    NumbersLife.append(countCel)
    evol1=celula
    print(celula)
        
            
print(NumbersLife)            
    
    
    
